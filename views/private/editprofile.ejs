<%- layout('layout') -%>
    <!-- <h2>Welcome <%= user.firstName %></h2> -->
 <div class="uk-container text-center">
 <form method="post" action="/profile">
  
<table class="uk-table uk-table-hover uk-table-responsive uk-table-divider">
    <thead>
        <tr>
            <th>Shrink</th>
            <th>Expand</th>
            
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>First Name</td>
            <td>
                <% if (user.firstName) { %>
                          <%= user.firstName %>
                        <% } else { %>
                            <input type="text" name="firstName">
                        <% } %>
            </td>
           
        </tr>
        <tr>
            <td>Last Name</td>
            <td>
                <% if (user.lastName) { %>
                          <%= user.lastName %>
                        <% } else { %>
                            <input type="text" name="lastName">
                        <% } %>
            </td>
           
        </tr>
        <tr>
            <td>Email</td>
            <td>
                <% if (user.email) { %>
                          <%= user.email %>
                        <% } else { %>
                            <input type="email" name="email">
                        <% } %>
            </td>
           
        </tr>
        <tr>
            <td>Contact No</td>
            <td>
                <% if (user.contact) { %>
                          <%= user.contact %>
                        <% } else { %>
                            <input type="number" name="contact">
                        <% } %>
            </td>
           
        </tr>
        <tr>
            <td>Address </td>
            <td>
                <% if (user.address) { %>
                          <%= user.address %>
                        <% } else { %>
                            <input type="text" name="address">
                        <% } %>
            </td>
           
        </tr>
        <tr>
            <td>Pincode </td>
            <td>
                <% if (user.pincode) { %>
                          <%= user.pincode %>
                        <% } else { %>
                            <input type="number" name="pincode">
                        <% } %>
            </td>
           
        </tr>
        <tr>
            <td>Gender</td>
            <td>
                <% if (user.gender) { %>
                          <%= user.gender %>
                        <% } else { %>
                            <input type="text" name="gender">
                        <% } %>
            </td>
           
        </tr>
    </tbody>
</table>
<button class="uk-button uk-button-secondary">Submit</button>
</form>
</div>