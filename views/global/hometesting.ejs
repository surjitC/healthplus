<%- layout('layout') -%>
<h2>Home testing</h2>
<div class="uk-container text-center">
    <div class="uk-grid">
        <div class="uk-width-1-3@m">
            <img class="product-image" src=<%= service.image %> alt=<%= service.name %>>
        </div>
        <div class="uk-width-2-3@m text-center product-info">
            <p class="uk-heading-primary"><%= service.firstName %></p>
            <span class="uk-label"><%= service.category %></span>
            <h3><i class="fa fa-rupee-sign"></i> <%= service.price %></h3>
                <form method="post" action="/cart">
                    <input type="hidden" name="service-id" value=<%= service._id %> />
                    <button class="uk-button uk-button-secondary product-add-to-cart" type="submit"><i class="fa fa-shopping-cart button-icon"></i> Get Services</button>
                </form>
        </div>
    </div>
</div>